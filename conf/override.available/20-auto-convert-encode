" Encoding within editor
set encoding=utf-8
"set encoding=iso-2022-jp
"set encoding=euc-jp
"set encoding=sjis

" Auto detect (Linux)
set fileencodings=iso-2022-jp,euc-jp,sjis,utf-8
" Auto detect (Windows)
"set ucs-bom,utf-8,iso-2022-jp,euc-jp,cp932,utf-16le,utf-16,default
"set ucs-bom,iso-2022-jp-3,iso-2022-jp,eucjp-ms,euc-jisx0213,euc-jp,sjis,cp932,utf-8

" CR/LF convention auto detection order
set fileformats=unix,dos,mac

" Force to save encoding in UTF-8 (explicit)
"set fenc=utf-8

" Force to save CR/LF as Unix (=NL)
"set fileformat=unix
